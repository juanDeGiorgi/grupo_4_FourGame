        <%if(products.length > 0){%>
            <div class="main">
                <div class="aside-c">
                    <aside class="aside">
                        <h3 class="aside-t"><%=name || "Todos los productos"%></h3>
                        <span class="number-results"><%=products.length%> resultados</span>
                        <div class="line">
                            <!-- linea decorativa -->
                        </div>
                            <div>
                                <h3 class="ul-title">Precio</h3>
                                <ul>
                                    <li class="li-filter">
                                        <a href="/search?name=<%=name%>&categoryId=<%=categoryId%>&typeId=<%=typeId%>&price=ASC">
                                            <div class="c-filter">
                                                <div id="price-filter-min" class="check-off"></div>
                                                <span class="check-title">Minimo</span>
                                            </div>
                                        </a>
                                    </li>
                                    <li class="li-filter">
                                        <a href="/search?name=<%=name%>&categoryId=<%=categoryId%>&typeId=<%=typeId%>&price=DESC">
                                            <div class="c-filter">
                                                <div id="price-filter-max" class="check-off"></div>
                                                <span class="check-title">Maximo</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>              
                            <div>
                                <h3 class="ul-title">Categoria</h3>
                                <ul>
                                    <li class="li-filter">
                                        <a href="/search?name=<%=name%>&categoryId=<%=categoryId%>&typeId=3&price=<%=price%>">
                                            <div class="c-filter">
                                                <div id="type-filter-pc" class="check-off"></div>
                                                <span class="check-title">Pc</span>
                                            </div>
                                        </a>
                                    </li>
                                    <li class="li-filter">
                                        <a href="/search?name=<%=name%>&categoryId=<%=categoryId%>&typeId=2&price=<%=price%>">
                                            <div class="c-filter">
                                                <div id="type-filter-juegos" class="check-off"></div>
                                                <span class="check-title">Juegos</span>
                                            </div>
                                        </a>
                                    </li>
                                    <li class="li-filter">
                                        <a href="/search?name=<%=name%>&categoryId=<%=categoryId%>&typeId=1&price=<%=price%>">
                                            <div class="c-filter">
                                                <div id="type-filter-consolas" class="check-off"></div>
                                                <span class="check-title">Consolas</span>
                                            </div>
                                        </a>
                                    </li>
                                </ul>
                            </div>                     
                    </aside>
                </div>
    
                <section class="productos">
                    <% products.forEach(product => { %> 
                        <article>
                            <a href="/products/detail/<%=product.id%> " class="a-article">
                                <div class="contenedor-img">
                                    <img src="/images/products/<%=product.images[0].name%>" alt="image">
                                </div>
    
                                <div class="product-info">
                                    <button><i class="far fa-heart"></i></button>
    
                                    <div class="title">
                                        <h3><%=product.name %> </h3>
                                    </div>
                                    <div class="info">
                                        <p class="price">$ <%=toThousand(product.price)%> </p>
                                        <%if (product.discount !== 0){%>
                                            <span class="discount"><%=product.discount%>% OFF</span>
                                        <%}%>
                                    
                                        <p class="payMethod">12 x $ <%=toThousand((product.price / 12).toFixed(0))%> sin inter√©s</p>
                                    </div>
                                </div>
                            </a>
                        </article>
                    <% }) %> 
                </section>
    
            </div>
        <%}else{%>
            <div class="not-results">
                <i class="far fa-sad-tear c-icon"></i>
                <div>
                    <h3 class="not-result-text">No encontramos resultados para <span class=search-name>"<%=name.length > 13 ? `${name.substring(0,13)}...` : name%>"</span></h3>
                    <h3 class="not-result-text">puedes ver todos nuestros productos <a style="color: #3D2ED0;" href="/search">aqui</a></h3>
                </div>
            </div>
        <%}%>
    </main>
    
